<div class='row'>
  <div class='col-12 pt-5 pb-5 theme-show-cover'>
    <div class='d-flex justify-content-center'>
      <h2 class='text-white'>
        <%= @theme.title %>
      </h2>
    </div>

    <div class='d-flex justify-content-center'>

      <p class="text-white pl-2"><%= Theme.human_attribute_name :category %>:
        <%= @theme.category.name %></p>
      <p class="text-white pl-2"><%= Theme.human_attribute_name :tags %>:
        <% @theme.tags.pluck(:name).each do |tag_name| %>
          <span class="badge badge-primary"><%= tag_name %></span>
        <% end %>
      </p>
    </div>

    <div class='d-flex justify-content-center'>
      <% if @theme.owner?(current_user) %>
        <%= link_to t('.edit'), edit_theme_path(@theme), class: "text-white float-right" %>
      <% end %>
    </div>
  </div>
</div>

<div class='row'>
  <div class='col-12'>
    <% if notice.present? %>
      <div class="alert alert-primary" role="alert">
        <%= notice %>
      </div>
    <% end %>
  </div>
</div>

<div class='row'>
  <div class='col-md-9'>
    <div class='theme-ideas'>
      <%= render 'ideas', theme: @theme %>
    </div>
  </div>

  <div class='col-md-3'>
    <div class="theme-actions">

      <% if user_signed_in? %>
      <%= link_to t('.register_idea'), new_theme_idea_path(@theme),
            class: "btn btn-lg btn-primary mt-3 ml-2 idea-add-new", remote: true %>
      <% else %>
      <%= link_to t('.register_idea'), new_user_session_path,
            class: "btn btn-lg btn-primary mt-3 ml-2" %>
      <% end %>
    </div>
  </div>

  <hr/>

  <div class="actions">
    <%= link_to t("helpers.links.back"), themes_path, class: "btn" %>
  </div>
</div>


<div class="idea-form-wrapper fixed-bottom">
  <div class='row'>
    <div class='container bg-white d-flex justify-content-center'>
      <div class='col-8'>
         <div class='idea-form p-3'>
            <%= render "themes/ideas/form", theme: @theme, parent_idea: nil %>
         </div>
       </div>
    </div>
  </div>
</div>
