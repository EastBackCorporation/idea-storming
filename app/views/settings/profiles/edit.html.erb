<%= render 'shared/notice' %>
<div class="row">
  <div class="col-lg-4 col-md-6 col-sm-8 col-12 mx-auto my-4">
    <div class="card shadow-sm">
      <div class="card-body">
        <div class='row'>
          <div class='col'>
            <h5 class='card-title'><strong><%= t(".title") %></strong></h5>
            <hr />

            <%= flash_messages %>
            <%= error_messages(current_user.errors) %>
            <%= form_with model: current_user, url: settings_profile_path, local: true, method: :patch do |f| %>
              <div class='row'>
                <div class='col-12'>
                  <div class="form-group">
                    <%= f.label :nick_name  %>
                    <%= f.text_field :nick_name, class: 'form-control' %>
                  </div>
                </div>

                <div class='col-12'>
                  <div class="form-group">
                    <%= f.label :avatar %><br />
                    <% if current_user.avatar.attached? %>
                      <label for='user_destroy_avatar'><%= t('helpers.links.destroy')%></label>
                      <%= check_box_tag 'user[destroy_avatar]', true, false, { class: '' } %>
                      <%= image_tag current_user.avatar.variant(resize: "100x100"), class: 'form-control' %>
                    <% else %>
                      <%= f.file_field :avatar %>
                    <% end %>

                  </div>
                </div>
              </div>

              <div class='row'>
                <div class='col'>
                  <%= f.submit t('helpers.submit.update'), class: 'btn btn-success' %>
                  <%= link_to t("helpers.links.cancel"), request_from_path(themes_path), class: "btn btn-secondary ml-3" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
