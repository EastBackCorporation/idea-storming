<header class="border-bottom py-1 px-2 mb-4">
  <% if user_signed_in? %>
    <%= link_to dashboard_index_path do %>
      <%= User.model_name.human %>:
      <%= current_user&.nick_name %>
    <% end %>
    <%= link_to t("devise.shared.links.sign_out"), destroy_user_session_path, method: :delete, class:"ml-2" %>
  <% else %>
    <%= link_to t("devise.shared.links.sign_in"), new_session_path(User) %> /
    <%= link_to t("devise.shared.links.sign_up"), new_registration_path(User) %>
  <% end %>
</header>