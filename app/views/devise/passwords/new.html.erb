<div class='row'>
  <div class='col-12'>
    <div class='sign-in'>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <section class="h-100">
        <div class="container h-100">
          <div class="row justify-content-md-center h-100">
            <div class="card-wrapper">
              <div class="card fat">
                <div class="card-body">
                  <h4 class="card-title"><%= t('.forgot_your_password') %></h4>
                  <%= render "devise/shared/flash_messages" %>
                  <%= devise_error_messages! %>

                  <div class="form-group">
                    <%= f.label :email %>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'  %>
                  </div>
                  <p class="text-muted">
                    <small><%= t(".forgot_your_password_annotation") %></small>
                  </p>
                  <div class="form-group no-margin">
                    <%= f.submit t(".send_me_reset_password_instructions"), class: 'btn btn-primary btn-block' %>
                  </div>
                  <div class="margin-top20 text-right">
                    <%= render "devise/shared/links" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    <% end %>
    </div>
  </div>
</div>
