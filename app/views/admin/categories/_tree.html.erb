<table>
<%= arranged_tree_as_list(Category.all.arrange, {sort_by: [:name, :id]}) do |category| %>
  <h3>
    <%= "#{'-' * category.depth.to_i } " %>
    <%= link_to category.name, edit_admin_category_path(category) %>
    <%= link_to '子カテゴリ作成', new_admin_category_path(parent_category_id: category.id), class: 'btn btn-danger' %>
    <%= link_to t('helpers.links.destroy'), admin_category_path(category), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %>
  </h3>
<% end %>
