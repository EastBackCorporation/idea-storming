<%= render 'shared/notice' %>

<div class='row'>
  <section class="col-xl-6 col-lg-8 col-md-10 col-12 m-auto">
    <div class="card mt-4 border-0 shadow-sm">
      <div class="card-body">
        <h5 class='card-title'>
          <strong><%= t("dashboard.index.#{params[:type]}") %></strong>
        </h5>
        <% if @themes.present? %>
          <table class="table">
            <tbody>
              <% @themes.each do |theme| %>
                <tr>
                  <td>
                    <%= link_to theme.title, theme_path(theme) %>
                    <br/>
                    <small class="text-muted float-left">
                      <%= Theme.human_attribute_name :idea_count %>
                      <%= theme.ideas.count %>
                    </small>
                    <small class="text-muted float-right">
                      <%= Theme.human_attribute_name :updated_at_short%>
                      <%= l(theme.updated_at) %>
                    </small>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class='row'>
            <div class='col-12'>
              <div class='d-flex justify-content-center'>
                <%= paginate @themes %>
              </div>
            </div>
          </div>
        <% else %>
          <%= t(".blank", name: t(".owner_themes"))%>
        <% end %>
      </div>
    </div>
  </section>
</div>

<div class='row'>
  <div class='col-xl-6 col-lg-8 col-md-10 col-12 mt-4 mx-auto'>
    <%= link_to t('helpers.links.back'), dashboard_index_path, class: "btn btn-secondary" %>
  </div>
</div>
