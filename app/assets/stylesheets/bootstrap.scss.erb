}

.theme-ideas {
}

.themes-ideas-idea-tree {
  li,
  ul {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  li {
    @include media-breakpoint-down(sm) {
      min-width: 22rem;
    }
    @include media-breakpoint-only(md) {
      min-width: 42rem;
      max-width: 42rem;
    }
    @include media-breakpoint-only(lg) {
      min-width: 52rem;
      max-width: 52rem;
    }
    @include media-breakpoint-only(xl) {
      min-width: 52rem;
      max-width: 52rem;
    }
  }

  ul {
    position: relative;
    margin-left: 1.5rem;
  }

  ul:before {
    content: "";
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    width: 0;
    border-left: .5rem solid #ccc;
  }


  li  {
    position:relative;
    margin:0;
  }

  li:before {
    content:"";
    display:block;
    position:absolute;
    top: 0;
    left: 0;
    width:8em;
    height:0;

    border-top: .5rem solid #ccc;

  }

  li:last-child:before {
    top: 3rem;
    bottom: 0;
    height: auto;


  }

  li.themes-ideas-idea-last:before {
    background: #f2f8f9;
  }

  .themes-ideas-idea-wrapper {
    margin-left: 1.5rem;
    padding-top: 1rem;
  }

  .themes-ideas-idea-branch-mark:hover {
    border: solid 2px orange;
  }

  .themes-ideas-idea-branch-mark {
    width: 1.5rem;
    height: 1.5rem;
    border: solid 2px #a7a7bd;
    background: white;
    border-radius: 1rem;
    position: absolute;
    left: -.5rem;
    top: 2.5rem;
    z-index: 1;

        i {
            position: absolute;
            top: .2rem;
            left: .2rem;
          }



  }
}

