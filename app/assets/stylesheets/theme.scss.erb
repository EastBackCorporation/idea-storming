.themes-index-cover-search {
  background: rgba(0,0,0,0.03);
  border-radius: 1.5rem !important;
}

.themes-index-cover {
  background-image: url(<%= image_path('background.png') %>), linear-gradient(0deg, #00dcc9, #5983e8);
  position: relative;
  padding-bottom: 0;
  margin-bottom: 0;
  background-size: cover;
  background-position: center 5%;
}

.themes-index-category-type-select {
  .themes-index-category-type-select-btn:focus {
    outline: none;
    box-shadow: none;
  }
}

.themes-index-add-theme {
  width: 8em;
  height: 8em;
}

.themes-index-add-theme-corner {
  position: absolute;
  right: 0;
  bottom: 0;
}

.themes-index-theme-no-set-image {
  div {
    height: 8em;
    text-decoration: none;
    background-image: url(<%= image_path('background_sm.png') %>);
    position: relative;
    padding-bottom: 0;
    margin-bottom: 0;
    background-size: cover;
    background-position: center 50%;

    h4 {
      text-decoration: none;
      text-shadow: #3c3c3c 1px 1px 0px, #3c3c3c -1px 1px 0px,
             #3c3c3c 1px -1px 0px, #3c3c3c -1px -1px 0px;
    }
  }
}

.themes-index-theme-no-set-image:hover {
  text-decoration: none !important;
}

.themes-ideas-idea-tree {
  li,
  ul {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  ul {
    position: relative;
    margin-left: 1.5em;
  }

  ul:before {
    content: "";
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    width: 0;
    border-left: 3px solid #ccc;
  }


  li  {
    position:relative;
    margin:0;
  }

  li:before {
    content:"";
    display:block;
    position:absolute;
    top: 0;
    left: 0;
    width:8em;
    height:0;

    border-top:3px solid #ccc;

  }

  li:last-child:before {
    top: 5em;
    bottom: 0;
    height: auto;


  }

  li.themes-ideas-idea-last:before {
    background: #f2f8f9;
  }

  .themes-ideas-idea-wrapper {
    margin-left: 1.5em;
    padding-top: 1em;
  }

  .themes-ideas-idea-branch-mark {
    width: 1em;
    height: 1em;
    border: solid 2px #a7a7bd;
    background: white;
    border-radius: 1em;
    position: absolute;
    left: -.5em;
    top: -.5em;
  }
}
