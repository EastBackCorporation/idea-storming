html {
  font-size: 16px;
}

header {
  background: #5983e8;
}

body {
  font-family: '';
  min-height: 100vh;
}

.title {
  border-bottom: 1px solid #eeeeee;
  padding: 0 0 0.2em;
}

.avatar {
  .avatar-circle {
    border: 1px solid white;
    width: 3em;
    span {
      font-size: 2em;
    }
  }
  .avatar-blue { background-color: #007bff !important; }
  .avatar-green { background-color: #28a745 !important; }
  .avatar-red { background-color: #dc3545 !important; }
  .avatar-pink { background-color: #e83e8c !important; }
  .avatar-purple { background-color: #6f42c1 !important; }
  .avatar-orange { background-color: #fd7e14 !important; }
  .avatar-black { background-color: black !important; }
  .avatar-blown { background-color: blown !important; }
}

.avatar::after {
  display: none !important;
}
